{
  "name": "chat-automation",
  "displayName": "Chat Automation",
  "description": "Tự động gửi tin nhắn vào VS Code Chat với quản lý theo project, gửi hàng loạt và lịch lặp lại.",
  "version": "0.1.0",
  "publisher": "local",
  "repository": {
    "type": "git",
    "url": "https://github.com/local/chat-automation"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chatAutomation.openPanel",
        "title": "Chat Automation: Mở bảng điều khiển"
      },
      {
        "command": "chatAutomation.run",
        "title": "Chat Automation: Mở (alias)"
      },
      {
        "command": "chatAutomation.sendAll",
        "title": "Chat Automation: Gửi tất cả tin nhắn"
      },
      {
        "command": "chatAutomation.stop",
        "title": "Chat Automation: Dừng gửi"
      },
      {
        "command": "chatAutomation.addMessage",
        "title": "Chat Automation: Thêm tin nhắn nhanh"
      },
      {
        "command": "chatAutomation.startSchedule",
        "title": "Chat Automation: Bắt đầu lịch"
      },
      {
        "command": "chatAutomation.stopSchedule",
        "title": "Chat Automation: Dừng lịch"
      },
      {
        "command": "chatAutomation.toggleAutoContinue",
        "title": "Chat Automation: Bật/tắt Auto-Continue"
      },
      {
        "command": "chatAutomation.startAutoContinue",
        "title": "Chat Automation: Bắt đầu Auto-Continue"
      },
      {
        "command": "chatAutomation.stopAutoContinue",
        "title": "Chat Automation: Dừng Auto-Continue"
      },
      {
        "command": "chatAutomation.copyInjectScript",
        "title": "Chat Automation: Copy Script (dùng trong DevTools)"
      },
      {
        "command": "chatAutomation.discoverCommands",
        "title": "Chat Automation: Khám phá Commands (Debug)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo \"(no lint configured)\"",
    "package": "npm run compile && echo y | vsce package --allow-missing-repository --no-yarn",
    "build": "npm run package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.4.0"
  }
}